@model Dilemma.Business.ViewModels.SystemConfigurationViewModel

@{
    ViewBag.Title = "System Configuration";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "SystemConfiguration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(x => x.MaxAnswers, new { @class = "col-md-2 col-sm-3 control-label" })
        <div class="col-md-3 col-sm-4">
            @Html.TextBoxFor(x => x.MaxAnswers, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MaxAnswers)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.QuestionLifetime, new { @class = "col-md-2 col-sm-3 control-label" })
        <div class="col-md-3 col-sm-4">
            @Html.EnumDropDownListFor(x => x.QuestionLifetime, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.QuestionLifetime)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.SystemEnvironment, new { @class = "col-md-2 col-sm-3 control-label" })
        <div class="col-md-3 col-sm-4">
            @Html.EnumDropDownListFor(x => x.SystemEnvironment, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SystemEnvironment)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
