@model Dilemma.Business.ViewModels.QuestionViewModel
@{
    ViewBag.Title = "Ask a question";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Question", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(x => x.Text, new { @class = "sr-only" })
        <div class="col-md-12">
            @Html.TextAreaFor(x => x.Text, new { @class = "form-control", rows="10"})
            @Html.ValidationMessageFor(x => x.Text)
        </div>
    </div>
        
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
