@model Dilemma.Business.ViewModels.QuestionDetailsViewModel

@{
    ViewBag.Title = "Details";
}

@Html.DisplayFor(x => x.QuestionViewModel);

@if (Model.Answer != null)
{
    using (Html.BeginForm("Answer", "Question", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
         @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(x => x.Answer.Text, new { @class = "col-md-2 col-sm-3 control-label" })
            <div class="col-md-10 col-sm-9">
                @Html.TextAreaFor(x => x.Answer.Text, new { @class = "form-control", rows="10"})
                @Html.ValidationMessageFor(x => x.Answer.Text)
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    }
}
else
{
    <div class="row top-buffer-xlg">
        <div class="col-md-8 col-md-offset-2">
            <p class="bg-danger padded">No more answers allowed...</p>
        </div>
    </div>
}