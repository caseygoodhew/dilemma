@model Dilemma.Web.Controllers.PrelaunchViewModel
@{
    ViewBag.Title = "Get in early!";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Question", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.Label("What's your question?", new { @class = "control-label" })
        <div>
            @Html.TextAreaFor(x => x.Question, new { @class = "form-control", rows="10"})
        </div>
    </div>
    
    <div class="form-group">
        <div class="">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>

}