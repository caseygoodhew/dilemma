@using System.Text.RegularExpressions
@using Dilemma.Business.ViewModels

@{
    var tidyRegex = new Regex("[^a-zA-Z]");
    Func<string, string> formatCategoryUrl = (x) => tidyRegex.Replace(x, string.Empty).ToLower();
    var counter = 3;
    Func<int> getNextCounter = () => { return counter++; };
    Func<string, string> getMenuClass = (x) => x == ViewBag.Category ? "is-page-current" : string.Empty;
}


<header role="banner" class="page-hd">
    <nav class="navbar navbar-default navbar-inverse">
        <div class="container-fluid">
            <div class="wrap">
                <div class="navbar-header">
                    <a href="/dilemmas?category=all" rel="home" class="page-logo">
                        <img src="/Content/images/device.png" alt="" width="60" style="position: absolute;top: -5px; margin-right: 5px;">
                        <img src="/Content/images/logo.png" alt="" width="200" style=" margin: 10px 0 0 70px;">
                    </a>
                </div>

                <ul class="nav navbar-nav right">
                    <li class="dropdown nav-level-1">
                        <a href="/dilemmas" class="dropdown-toggle nav-level-1-link js-nav-level-2-menu-trigger" role="button" aria-expanded="false">
                            <img src="/Content/images/icons/conversation.png" alt="" width="30">
                            <span class="nav-level-1-text">
                                Advise &amp; Vote 
                                <span class="caret"></span>
                            </span>
                
                        </a>
                        <ul class="nav-level-2-menu" role="menu">
                            <li class="nav-level-2 in-category-1 js-categories-all @getMenuClass("all")">
                                <a href="/dilemmas" class="nav-level-2-link">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                    All Categories
                                </a>
                            </li>
                            <li class="nav-level-2 in-category-2 js-categories-bookmarks @getMenuClass("bookmarks")">
                                <a href="/dilemmas/bookmarks" class="nav-level-2-link">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                    My Bookmarks
                                </a>
                            </li>
                            @foreach (CategoryViewModel category in ViewBag.Categories)
                            {
                                <li class="nav-level-2 in-category-@getNextCounter() @getMenuClass(formatCategoryUrl(category.Name))">
                                    <a href="/dilemmas/@formatCategoryUrl(category.Name)" class="nav-level-2-link">
                                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="nav-level-1">
                        <!-- <a href="#" data-toggle="modal" data-target="#modal-ask"> -->
                        <a href="/ask" class="nav-level-1-link">
                            <img src="/Content/images/icons/ask.png" alt="" width="30">
                            <span class="nav-level-1-text">Ask</span>
                        </a>
                    </li>
                    <li class="nav-level-1">
                        <a href="/profile" class="nav-level-1-link">
                            <img src="/Content/images/icons/user.png" alt="" width="26">
                            <span class="nav-level-1-text">Profile</span>
                            <!--?php $unread_notifications = 99; ?-->
                            <!--?php if ($unread_notifications > 0) { ?-->
                            <span class="nav-unread-notifications">
                                <!--?=$unread_notifications?-->
                                $unread_notifications
                            </span>
                            <!--?php } ?-->
                        </a>
                    </li>
                </ul>          
            </div><!-- wrap -->
        </div>
    </nav>

</header>
