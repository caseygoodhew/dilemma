
  <!-- Modal -->
<div class="modal fade" id="modal-ask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <form action="" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Your Dilemma</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="dilemma_text">What's on your mind?</label>
                    <textarea name="dilemma_text" id="dilemma_text" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="dilemma_category">Which category should your dilemma be placed in?</label>
                    <select id="dilemma_category" name="dilemma_category" imultiple class="form-control">
                        <option value="">Choose Category</option>
                        <option value="">Personal</option>
                        <option value="">Family</option>
                        <option value="">Relationships</option>
                        <option value="">Work</option>
                        <option value="">Sex</option>
                        <option value="">Teenage</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <!-- <div class="line">
                         <div class="checkbox left" style="padding-left: 5px;">
                             <label style="color: #fff;">
                                 <input type="checkbox"> I have read the rules and my question abides by them.
                             </label>
                         </div>             
                     </div> -->


                <div class="line">
                    <button type="button" class="btn btn-success btn-large left">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        <strong>Add My Dilemma</strong>
                    </button>
                    <button type="button" class="btn btn-default right" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        Close
                    </button>              
                </div>

            </div>          


        </div>
    </form>
</div>



    <!-- Modal -->
<div class="modal fade" id="modal-flag" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <form action="" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header line">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <legend>Why are you flagging this for moderation?</legend>
                    <div class="radio">
                        <label>
                            <input type="radio" name="flag_reason" id="flag_reason_1" value="option1">
                            Offensive or abusive content
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="flag_reason" id="flag_reason_2" value="option2">
                            Spam / unsolicited advertising
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="flag_reason" id="flag_reason_3" value="option3">
                            Not an answer or unrelated to this dilemma
                        </label>
                    </div>
                </div><!-- form-group -->
            </div><!-- modal-body -->
            <div class="modal-footer">
                <div class="line">
                    <button type="button" class="btn btn-danger btn-large left js-flag-confirm" data-dismiss="modal" >
                        <span class="glyphicon glyphicon-flag"></span>
                        <strong>Flag for moderation</strong>
                    </button>
                    <button type="button" class="btn btn-default right" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        Close
                    </button>              
                </div>
            </div>

        </div>
    </form>
</div>

