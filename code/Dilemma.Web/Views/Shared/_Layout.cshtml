<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">

    <title>
        @if (string.IsNullOrEmpty(ViewBag.Title))
        {
            <text>OurDilemmas</text>
        }
        else
        {
            <text>OurDilemmas - </text> @ViewBag.Title;
        }
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <!--icons-->
    <link rel="shortcut icon" href="/Content/images/icons/favicon.png" type="image/x-icon"/>
    <link rel="apple-touch-icon-precomposed" href="/Content/images/icons/apple-touch-icon-precomposed.png" type="image/png"/>

    <!-- send jquery to the foot of the page -->
    <script type='text/javascript'>window.q = []; window.$ = function (f) { q.push(f); }</script>

</head>
<body>
    @Html.Partial("Header")
    
    @Html.Partial("Modals")
    
    @if (ViewBag.SuppressPageBd == true)
    {
        @RenderBody()
    }
    else
    {
        <div class="page-bd">
            <div class="wrap">
                @RenderBody()
            </div>
        </div>
    }


    
    @Html.Partial("Footer")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/cookiedirective")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/homegrown")
    
    
    @RenderSection("scripts", required: false)
    
    <script type="text/javascript">$.each(q, function (i, f) { $(f); })</script>
</body>
</html>
