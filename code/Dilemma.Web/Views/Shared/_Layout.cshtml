@using Dilemma.Business.Services
@using Disposable.Common.ServiceLocator
@{
    var sysConfig = Locator.Get<IAdministrationService>().GetSystemConfiguration();
    var isDevMode = sysConfig.SystemEnvironment == SystemEnvironment.Development || sysConfig.SystemEnvironment == SystemEnvironment.Testing;
    var isQuestionSeeder = sysConfig.SystemEnvironment == SystemEnvironment.QuestionSeeder;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dilemma</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dilemma", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            @if (!isQuestionSeeder)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("QList", "List", "Question")</li>
                        <li>@Html.ActionLink("Activity", "Index", "Activity")</li>
                        <li>@Html.ActionLink("Ask", "Create", "Question")</li>
                        <li>@Html.ActionLink("SysConfig", "Index", "SystemConfiguration")</li>
                        <li>@Html.ActionLink("Notification", "Index", "Notification")</li>
                        <li>@Html.ActionLink("Moderation", "Index", "Moderation")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class=""><a href="/glimpse.axd">Glimpse</a></li>
                        @if (isDevMode)
                        {
                            <li>@Html.ActionLink("Auth", "Index", "QuickAuthentication")</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dilemma</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/cookiedirective")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
